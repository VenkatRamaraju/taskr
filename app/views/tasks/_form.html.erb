<% if @task.errors.any? %>
<h4>Oops, something went wrong</h4>
<ul>
	<% @task.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
	</ul>
<% end %>

<%= simple_form_for @task do |f| %>
	<%= f.input :content %>
	<%= f.input :state %>
	<%= f.button :submit, class: "btn btn-primary" %>

<% end %>

<p>
	<%= link_to "All tasks", tasks_path %>
</p>